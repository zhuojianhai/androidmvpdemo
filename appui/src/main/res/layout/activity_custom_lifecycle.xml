<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomLifecycleActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:orientation="horizontal"
        >
        <EditText
            android:drawableLeft="@mipmap/ic_iphone"
            android:drawablePadding="@dimen/dp_20"
            android:hint="输入商户号"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="12.47dp"
            >

        </EditText>
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/ic_seller_name_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:background="#D1D1D1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5">
    </View>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:orientation="horizontal"
        >
        <TextView
            android:drawableLeft="@mipmap/ic_iphone"
            android:drawablePadding="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="中国大陆  +86"
            android:gravity="center_vertical|bottom"
            android:layout_gravity="bottom"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_10"
            android:layout_height="wrap_content">

        </TextView>

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="#d1d1d1"

            />
        <EditText
            android:hint="请输入手机号"
            android:layout_width="0dp"
            android:inputType="phone"
            android:maxLength="20"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_13"
            >

        </EditText>


    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:background="#D1D1D1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5">
    </View>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:orientation="horizontal"
        >
        <EditText
            android:drawableLeft="@mipmap/ic_validation"
            android:drawablePadding="@dimen/dp_20"
            android:hint="请输入验证码"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_13"
            >

        </EditText>
        <TextView
            android:layout_gravity="bottom"
            android:gravity="bottom|right"
            android:src="@mipmap/ic_seller_name_notice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#28b5f3"
            android:paddingBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_13"
            >

        </TextView>

    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:background="#D1D1D1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5">
    </View>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="left"
            android:gravity="center"
            android:src="@mipmap/ic_seller_name_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_15">
        </TextView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:background="@drawable/login_btn"
            android:textSize="@dimen/dp_16">
        </Button>
        
        <TextView
            android:text="登录即代表阅读并同意《隐私条款》"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_12"
            android:textColor="#FF999999"
            >

        </TextView>

    </LinearLayout>
</LinearLayout>